extends dashboard

block body
    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title Для реєстрації, заповніть, будь ласка, форму
                    .panel-body
                        form(role="form", method="POST")
                            fieldset
                                .form-group
                                    input.form-control(name="name", type="text", placeholder="Ім'я")
                                .form-group
                                    input.form-control(name="surname", type="text", placeholder="Прізвище")
                                .form-group
                                    input.form-control(name="email", type="email", placeholder="E-mail")
                                .form-group
                                    input.form-control(name="password", type="password", placeholder="Пароль")
                                .form-group
                                    input.form-control(name="repeatPassword", type="password", placeholder="Підтвердіть пароль")
                                .form-group
                                    label Роль:
                                    label.radio-inline
                                        input(name="role", type="radio", value="STUDENT", checked)
                                        | Студент
                                    label.radio-inline
                                        input(name="role", type="radio", value="TEACHER")
                                        | Вчитель
                                    label.radio-inline
                                        input(name="role", type="radio", value="ADMIN")
                                        | Адміністратор
                                input.btn.btn-lg.btn-success.btn-block(type="submit", value="Зареєструватися")